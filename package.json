{
  "name": "xplorin-api",
  "version": "3.1.2",
  "description": "Xplorin backend api",
  "author": "derakuswari",
  "private": true,
  "license": "ITDC",
  "scripts": {
    "prebuild": "rimraf dist",
    "postbuild": "copyfiles --up 1 src/**/*.json dist && copyfiles --up 1 src/views/** dist && copyfiles --up 1 src/public/** dist",
    "build": "nest build",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate:local": "npm run clean && nest build && cross-env NODE_ENV=local typeorm migration:generate -n HackathonStarter",
    "migration:generate:production": "npm run clean && nest build && cross-env NODE_ENV=production typeorm migration:generate -n HackathonStarter",
    "migration:run:local": "npm run clean && nest build && cross-env NODE_ENV=local typeorm migration:run",
    "migration:run:production": "nest build && cross-env NODE_ENV=production typeorm migration:run",
    "migration:revert:local": "cross-env NODE_ENV=local typeorm migration:revert",
    "migration:revert:production": "cross-env NODE_ENV=production typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.7.1",
    "@nestjs/axios": "^0.0.7",
    "@nestjs/bull": "^0.5.4",
    "@nestjs/common": "^8.4.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.2",
    "@netilon/differify": "^4.0.0",
    "bcrypt": "^5.1.0",
    "bull": "^4.8.1",
    "cache-manager": "^3.4.4",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "crud-object-diff": "^2.3.6",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.22.1",
    "dotenv": "^16.0.0",
    "fast-csv": "^4.3.6",
    "firebase-admin": "^10.0.2",
    "hashids": "^2.2.8",
    "hbs": "^4.2.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.23",
    "nestjs": "0.0.1",
    "nestjs-i18n": "^8.1.3",
    "node-rsa": "^1.1.1",
    "nodemailer": "^6.7.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "performant-array-to-tree": "^1.9.1",
    "pg": "^8.7.3",
    "puppeteer": "^13.5.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.2",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.0",
    "@types/bull": "^3.15.8",
    "@types/cache-manager": "^3.4.3",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.8",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.180",
    "@types/multer": "^1.4.6",
    "@types/node": "^17.0.21",
    "@types/node-rsa": "^1.1.1",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/puppeteer": "^5.4.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.0",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
